#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

npx --no -- commitlint --edit ||
(
    echo '

    🤡😂❌🤡 ################ Commit Message ERROR. ##################### 🤡😂❌🤡
    ❌❌❌❌❌❌ Are you seriously trying to write that? ❌❌❌❌❌❌❌
    🤡😂❌🤡 ################ Commit Message ERROR. ##################### 🤡😂❌🤡

            '
    false;
)




echo ' '
echo ' '
echo '✨✨✨✅✅✅✅ 👻👻👻 .....I..👽......👻👻👻 ✅✅✅✅✨✨✨'
echo '✨✨✨✅✅✅✅ 👻👻👻 .....am..🧛.....👻👻👻 ✅✅✅✅✨✨✨'
echo '✨✨✨✅✅✅✅ 👻👻👻 ...committing...👻👻👻 ✅✅✅✅✨✨✨'
echo '✨✨✨✅✅✅✅ 👻👻👻 ....this..👹....👻👻👻 ✅✅✅✅✨✨✨'
echo '✨✨✨✅✅✅✅ 👻👻👻 .....now.🎃.....👻👻👻 ✅✅✅✅✨✨✨'
echo '🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀 Done 💯  🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀🚀'
echo ' '
echo ' '